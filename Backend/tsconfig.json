{
  "compilerOptions": {
    "target": "es2020", // Modern JavaScript
    "module": "esnext", // Use ES modules
    "moduleResolution": "bundler", // Resolve modules like Node.js
    "outDir": "dist", // Output directory for compiled files
    "rootDirs": ["src"], // Source directory (could remove if not needed)
    "esModuleInterop": true, // Interoperability between CommonJS and ES modules
    "experimentalDecorators": true, // Enable decorators for TypeORM
    "emitDecoratorMetadata": true, // Emit metadata for decorators (needed by TypeORM)
    "skipLibCheck": true, // Skip type checking of declaration files
    "lib": ["es2020"], // Include modern JS features
    "types": ["node", "jest"], // Include node and jest types for development
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules"]
}
